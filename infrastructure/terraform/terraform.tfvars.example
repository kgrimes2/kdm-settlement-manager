# terraform.tfvars - Example configuration
# Copy this to terraform.tfvars and update with your values
# DO NOT COMMIT terraform.tfvars with sensitive data

environment = "dev"
aws_region  = "us-east-1"
app_name    = "kdm-settlement-manager"

# Update these with your callback URLs
cognito_callback_urls = [
  "http://localhost:5173",
  # Add production URL here when ready: "https://yourdomain.com/callback"
]

cognito_logout_urls = [
  "http://localhost:5173",
  # Add production URL here when ready: "https://yourdomain.com/logout"
]

# Password policy
password_minimum_length = 12

# Lambda configuration
lambda_timeout = 30
lambda_memory  = 256

# DynamoDB billing
dynamodb_billing_mode = "PAY_PER_REQUEST"
